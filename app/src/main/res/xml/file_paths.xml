<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal storage -->
    <files-path
        name="internal_files"
        path="." />

    <!-- Cache directory for temporary files -->
    <cache-path
        name="cache_files"
        path="." />

    <!-- External storage (for exports) -->
    <external-path
        name="external_files"
        path="." />

    <!-- External cache (for temporary exports) -->
    <external-cache-path
        name="external_cache"
        path="." />

    <!-- Documents directory (for reports) -->
    <external-files-path
        name="documents"
        path="Documents/" />

    <!-- Downloads directory (for exported reports) -->
    <external-files-path
        name="downloads"
        path="Download/" />
</paths>