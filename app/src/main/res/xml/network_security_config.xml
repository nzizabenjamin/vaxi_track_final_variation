<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for FHIR test server -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">hapi.fhir.org</domain>
        <domain includeSubdomains="true">test.fhir.org</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">192.168.1.1</domain> <!-- Local network range -->
    </domain-config>

    <!-- Default configuration for other domains -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>